{{#if errorMessage}}
    <div class="alert alert-danger">
        {{errorMessage}}
    </div>
{{/if}}

{{#if successMessage}}
    <div class="alert alert-success">
        {{successMessage}}
    </div>
{{/iff}}

<form method="POST", action="/friends/add">
    <div class="form-group">
        <label for="friendName">Add Friend:</label>
        <input type="text" name="friendName" class="form-control" placeholder="Username">       
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>