<div class="container">
    <a href="/groups/all/{{selectedChannelId}}" class="btn btn-warning btn-sm">Go Back</a>

    {{#if errorMessage}}
        <div class="alert alert-danger">
            {{errorMessage}}
        </div>
    {{/if}}

    {{#if successMessage}}
        <div class="alert alert-success">
            {{successMessage}}
        </div>
    {{/if}}

    <form method="POST", action="/groups/all/{{selectedChannelId}}/kick">
        <div class="form-group">
            <label for="friendName">Kick Member:</label>
            <input type="text" name="groupMemberName" class="form-control" placeholder="Group Member Username">       
        </div>
        <button type="submit" class="btn btn-danger">Submit</button>
    </form>
</div>